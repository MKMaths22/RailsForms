<%= form_with model: @user do |form| %>
  <br>
  <%= label(:user, :username, "Your Username") %><br>
  <%= form.text_field :username %><br>
  <%= label(:user, :password, "Make your password") %><br>
  <%= form.password_field :password %><br>
  <%= label(:user, :email) %><br>
  <%= form.email_field :email, placeholder: "peter.hawes@email.co.uk" %><br>
  <%= form.submit "Submit" %><br>
<% end %>